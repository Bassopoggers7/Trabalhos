<script>
   //1ª Resposta
   var nota1 = parseFloat(prompt("digite nota 1"))
        var nota2 = parseFloat(prompt("digite nota 2"))
        media = (nota1 + nota2)/2
        console.log(media)
        if(media >= 6.0){
            console.log("Aprovado")
        } else {
            console.log("Exame");
            var exame = parseFloat(prompt('Digite a nota no exame'))
            var final = (media + exame)/2

            if (final >= 6){
                console.log("Aprovado");
            } else {
                console.log("Reprovado")
            }
        }
   //2ª Resposta
var num = parseInt(prompt('Digite um numero'))
        //digitei o numero 0

        if(num == 0)
            console.log('Número igual a zero')
        else if(num > 0)
            console.log('Número positivo')  
        else
            console.log('Número Negativo')

</script>
